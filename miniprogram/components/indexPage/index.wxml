<!--components/indexPage/index.wxml-->
<view class="container">
    <view>欢迎来到福乐家厨房</view>
    <view id="search_box" class="search_box">
        <form class="search_form" method="post" action="#">
            <input type="text" id="s" value="{{search_value}}"
                   placeholder="{{search_placeholder}}"
                   class="swap_value" bind:focus="searchClear"
                   bind:blur="getSearchValue"/>
            <image src="../../images/btn_search_box.gif"
                   class="btn" bind:tap="search"></image>
        </form>
    </view>
    <list list="{{scroll_list}}"></list>

</view>